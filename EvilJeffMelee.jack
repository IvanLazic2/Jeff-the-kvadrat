        let HeadFrame1[14] = -1;
        let HeadFrame1[15] = -1;

        let HeadFrames = Array.new(FrameCount);
        let HeadFrames[0] = HeadFrame1;

        // MIRRORED - facing left
        let HeadFrame1Mirrored = Array.new(16);
        let HeadFrame1Mirrored[0] = -1;
