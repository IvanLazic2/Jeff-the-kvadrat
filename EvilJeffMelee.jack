    static Array HeadFrame1Mirrored;

    static Array HeadFrames;

    static Array HeadFramesMirrored;

    static int FrameCount;

    function int GetFrameCount() { return FrameCount; }

    function void DrawFrame(int memAddress, int currFrame, bool display, bool mirrored)
    {
        if (mirrored)
        {
            do Sprite.Draw(memAddress, HeadFramesMirrored[currFrame], display);
        }
        else
        {
            do Sprite.Draw(memAddress, HeadFrames[currFrame], display);
        }

        return;
    }

